  <polygon points="70,75 70,105 100,90" fill="url(#playGradient)" />
  
  <!-- Gaming Controller Elements -->
  <circle cx="55" cy="145" r="8" fill="url(#zomigaGradient)" />
  <circle cx="125" cy="145" r="8" fill="url(#zomigaGradient)" />
  
  <!-- Content/Article Lines -->
  <rect x="135" y="35" width="30" height="4" rx="2" fill="url(#zomigaGradient)" />
  <rect x="135" y="45" width="20" height="4" rx="2" fill="url(#zomigaGradient)" />
  <rect x="135" y="55" width="25" height="4" rx="2" fill="url(#zomigaGradient)" />
