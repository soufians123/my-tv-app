  </defs>
  
  <!-- Background -->
  <rect width="180" height="180" rx="20" fill="url(#zomigaGradient)" opacity="0.1" />
  
  <!-- Main Circle -->
  <circle cx="90" cy="90" r="75" fill="url(#zomigaGradient)" opacity="0.2" stroke="url(#zomigaGradient)" stroke-width="2" />
  
